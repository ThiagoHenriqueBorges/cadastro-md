<!DOCTYPE HTML>
<html lang="pt-br">
	<form action="/clientes/salvar" method="post">
	<head>
		<meta charset="UTF-8">

		<title>Cadastro de Clientes</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous"> 
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>
		

			<img src="images/logo.png" id="logoCadastro"/>

		    <div class="container">

				<% if(validacao.length > 0){%>
					<script>	
						alert("Cadastro Falhou");
					</script>
					<div class="row">
						<div class="col-md-12">
							<div class="alert alert-danger">
								<strong>Atenção!</strong>
								<ul>
									<li>Favor preencher todos os campos</li>
									<% for(var i = 0; i < validacao.length; i++) { %>
										<% if (validacao[i].msg == "O DDD deve ter 3 caracteres") { %>
											<li><%= validacao[i].msg %></li>
										<% } %>	
										
									<%  } %>
								</ul>
							</div>
						</div>
					</div>
				<% } else { %> <script> alert("Cadastro Realizado com Sucesso"); </script> <% } %>

		    	<div class="row">
		    		<div class="col-md-12">
		    			
						<div class="form-group">
							<label for="nome_cliente">Nome</label>
							<input type="text" class="form-control" id="nome_cliente" name="nome_cliente" value="<%= cliente.nome_cliente; %>">
						</div>

						<div class="form-group">
							<label for="pwd">DDD</label>
							<input type="text" class="form-control" id="ddd_cliente" name="ddd_cliente" value="<%= cliente.ddd_cliente; %>">
						</div>

						<div class="form-group">
							<label for="pwd">Telefone</label>
							<input type="text" class="form-control" id="telefone_cliente" name="telefone_cliente" value="<%= cliente.telefone_cliente; %>">
						</div>

						<div class="form-group">
							<label for="pwd">Email</label>
							<input type="email" class="form-control" id="email_cliente" name="email_cliente" value="<%= cliente.email_cliente; %>">
						</div>

						<div class="form-group">
							<label for="pwd">Cidade</label>
							<input type="text" class="form-control" id="cidade_cliente" name="cidade_cliente" value="<%= cliente.cidade_cliente; %>">
						</div>


						<button type="submit" class="btn btn-default">Cadastrar</button>

							
			    	</div>
		    	</div>
		    </div>
			
			<div class="form-group">
		    	<img src="images/logo_madrid.png" id="logoMadrid" />
		    </div>

	    

		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
	</form>
</html>